<%include ../_header%>

<div class="row container">
    <div class="col-md-12">
        <form action="new" method="POST">
            <div class="form-group">
                <label for="">Sabor</label>
                <input type="text" class="form-control" name="flavor">
            </div>
            <div class="form-group">
                <label for="">Descripcion</label>
                <input type="text" class="form-control" name="description">
            </div>
            <div class="form-group">
                <label for="">IQ</label>
                <input type="text" class="form-control" name="iq">
            </div>
            <div class="form-group">
                <label for="">Imagen</label>
                <input type="text" class="form-control" name="picture">
            </div>

            <% if(alerta.length >0){ %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= alerta%>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                </div>
            <% } %>
    
            <% if(alertaExito.length >0){ %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert2">
                        <%= alertaExito%>
                        <button type="button" class="close" data-dismiss="alert2" aria-label="Close2">
                            <span aria-hidden="true">&times;</span>
                          </button>
                    </div>
                <% } %>

            <button class="btn btn-outline-warning btn-lg ">Agregar Cerebro</button>
        </form>
    </div>
</div>

<%include ../_footer%>