<%include ../_header%>

<div class="row container">
    <div class="col-md-12">
        <form action="/cerebros/edit/<%= cerebro.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="">Sabor</label>
                <input type="text" class="form-control" name="flavor" value="<%= cerebro.flavor %>" required>
            </div>
            <div class="form-group">
                <label for="">Descripcion</label>
                <input type="text" class="form-control" name="description" value="<%= cerebro.description %>"required>
            </div>
            <div class="form-group">
                <label for="">iq</label>
                <input type="text" class="form-control" name="iq" value="<%= cerebro.iq %>" required>
            </div>  
            <div class="form-group">
                <label for="">picture</label>
                <input type="text" class="form-control" name="picture" value="<%= cerebro.picture %>" required>
            </div>

            <% if(alerta.length >0){ %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= alerta%>
                    
                </div>
            <% } %>

            <button class="btn btn-outline-warning btn-lg "><i class="fas fa-skull"></i>Editar Cerebro</button>
        </form>
    </div>
</div>

<%include ../_footer%>